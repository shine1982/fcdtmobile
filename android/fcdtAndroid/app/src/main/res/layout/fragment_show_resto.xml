<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" tools:context="com.pdj.client.screen.ardoise.ShowRestoFragment"
    >


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/restoNameLabel"
        android:textSize="10pt"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:id="@+id/restoAddress"
        android:layout_below="@id/restoNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="开门时间 :"
        android:gravity="left"
        android:id="@+id/opentimeLabel"
        android:layout_below="@id/restoAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opentime"
        android:layout_below="@id/restoAddress"
        android:layout_toRightOf="@id/opentimeLabel"
        android:layout_marginLeft="10dp">
    </LinearLayout>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="价位 :"
        android:gravity="left"
        android:id="@+id/priceLabel"
        android:layout_below="@id/opentime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:layout_below="@id/opentime"
        android:layout_toRightOf="@id/priceLabel"
        android:layout_marginLeft="10dp">
    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text= "公共交通"
        android:gravity="left"
        android:id="@+id/transportLabel"
        android:layout_below="@id/price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transport"
        android:layout_below="@id/price"
        android:layout_toRightOf="@id/transportLabel"
        android:layout_marginLeft="10dp">
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/buttonsPanel"
        android:layout_below="@id/transport"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favoriteRestoButton"
            android:layout_weight="1"
            android:src="@drawable/ic_like_outline_50"
            android:padding="12dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/callResto"
            android:layout_weight="1"
            android:src="@drawable/ic_phone_50"
            android:padding="12dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapToResto"
            android:layout_weight="1"
            android:src="@drawable/ic_map_marker_50"
            android:padding="12dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderDishes"
            android:layout_weight="1"
            android:src="@drawable/ic_one_finger_50"
            android:padding="12dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonsPanel"
        android:layout_alignParentLeft="true"
        android:text="推荐理由："
        android:id="@+id/recReasonTitle"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recReason"
        android:layout_below="@id/buttonsPanel"
        android:layout_toRightOf="@id/recReasonTitle"
        android:layout_marginLeft="10dp">
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recReason"
        android:layout_alignParentLeft="true"
        android:text="菜单："
        android:id="@+id/menuTitle"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recReason"
        android:layout_toRightOf="@id/menuTitle"
        android:text=" 中文版 "
        android:id="@+id/menuCnBtn"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recReason"
        android:layout_toRightOf="@id/menuCnBtn"
        android:text=" 法文版 "
        android:id="@+id/menuFrBtn"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimary"/>
    <Space
        android:layout_below="@id/menuTitle"
        android:layout_width="1dp"
        android:layout_height="30dp"/>

</RelativeLayout>
